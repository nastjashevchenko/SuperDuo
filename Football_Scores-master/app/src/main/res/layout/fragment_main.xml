<!-- Can skip Start/End for margins/paddings due to layout is symmetrical -->
<!-- I don't see a reason to put marginStart/End in addition to Left/Right
if layout is symmetrical, but I added it because otherwise I "do not meet specifications"
If there any more important reason to why I should, please, add it to review comments -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/list_horizontal_margin"
    android:layout_marginRight="@dimen/list_horizontal_margin"
    android:layout_marginStart="@dimen/list_horizontal_margin"
    android:layout_marginEnd="@dimen/list_horizontal_margin"
    tools:context=".MainActivity$PlaceholderFragment">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/scores_list"
        android:divider="@android:color/transparent"
        android:dividerHeight="15sp" />

    <TextView
        android:id="@+id/empty_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_matches_text"
        android:gravity="center"
        android:textSize="@dimen/Score"
        android:visibility="gone" />
</FrameLayout>
